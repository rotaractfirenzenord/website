$(function ()
{
  var navbarLogoCollapse = function() {
    if ($("#mainNav").offset().top > 100) {
      $(".navbar-brand-logo").addClass("navbar-brand-logo-shrink");
    } else {
      $(".navbar-brand-logo").removeClass("navbar-brand-logo-shrink");
    }
  };
  // Collapse now if page is not at top
  navbarLogoCollapse();
  // Collapse the navbar when page is scrolled
  $(window).scroll(navbarLogoCollapse);
});